{
	"extends": "./tsconfig.dependency.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "../../packages/cli",
		"rootDir": ".",
		"composite": true,
		"tsBuildInfoFile": "./tsBuild.info",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ES2022",
		],
		"types": [
			"node"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"files": [
		"index.ts"
	],
	"compileOnSave": true
}